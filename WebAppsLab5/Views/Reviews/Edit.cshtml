@model WebAppsLab5.Models.Review

@{
    ViewData["Title"] = "Edit";
    var movie = (Movie)ViewData["Movie"];
}

<h2>Edit</h2>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <div class="form-group">
                <label asp-for="Reviewer" class="control-label"></label>
                <input asp-for="Reviewer" class="form-control" />
                <span asp-validation-for="Reviewer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="MovieIden" class="control-label"></label>
                <input asp-for="MovieIden" value="@movie.ID" class="form-control" />
                <span asp-validation-for="MovieIden" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="MovieTitle" class="control-label"></label>
                <input asp-for="MovieTitle" class="form-control" Value="@movie.Title" />
                <span asp-validation-for="MovieTitle" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="Update" class="btn btn-default" />
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.ID" class="btn btn-success">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
